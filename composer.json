{
    "require": {
        "php": "^7.4",
        "ext-ftp": "*",
        "keboola/php-component": "^8.0",
        "keboola/retry": "^0.5.0",
        "keboola/sanitizer": "^0.1.0",
        "league/flysystem": "^2.0",
        "league/flysystem-ftp": "^2.0",
        "league/flysystem-sftp": "^2.0",
        "webmozart/glob": "^4.3"
    },
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "keboola/csv": "^2.0",
        "keboola/coding-standard": "^4.0",
        "keboola/php-temp": "^2.0",
        "phpstan/phpstan": "^0.12.14",
        "phpunit/phpunit": "^9.0",
        "symfony/process": "^5.0",
        "keboola/datadir-tests": "^5.2"
    },
    "autoload": {
        "psr-4": {
            "Keboola\\FtpExtractor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Keboola\\FtpExtractor\\Tests\\": "tests/phpunit/",
            "Keboola\\FtpExtractor\\FunctionalTests\\": "tests/functional/"
        }
    },
    "scripts": {
        "tests-phpunit": "phpunit",
        "tests-datadir": "phpunit tests/functional",
        "tests": [
            "@tests-phpunit",
            "@tests-datadir"
        ],

        "phpstan": "phpstan analyse ./src ./tests --level=max --no-progress -c phpstan.neon",
        "phpcs": "phpcs -n --ignore=vendor --extensions=php .",
        "phpcbf": "phpcbf -n --ignore=vendor --extensions=php .",
        "phplint": "parallel-lint -j 10 --exclude vendor .",
        "build": [
            "@phplint",
            "@phpcs",
            "@phpstan",
            "@tests"
        ],
        "ci": [
            "@composer validate --no-check-publish --no-check-all",
            "@build"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
